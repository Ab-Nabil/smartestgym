<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createprofilebackground"
    tools:context=".CreateProfile.CreateFitLevelActivity">
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backrow"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/fLBackRow"
        />

    <RelativeLayout
        android:id="@+id/fLTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fLBackRow"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/textcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="CREATE YOUR PROFILE"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/fLp5"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/cp5" />
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/fLp5"
            android:textSize="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/whatis"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatis"
            android:gravity="start"
            android:text="YOUR FITNESS\nLEVEL ?"
            android:textColor="@color/colorWhite"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/fLTitle"
        android:id="@+id/fLForm"
        android:layout_above="@+id/flForwardRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <Button
            android:id="@+id/fitLevelBeginner"
            android:layout_alignParentStart="true"
            android:layout_width="300dp"
            android:layout_above="@+id/fitLevelIntermediate"
            android:layout_height="70dp"
            android:background="@drawable/bfit"
            android:layout_marginBottom="10dp"/>
        <Button
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:id="@+id/fitLevelIntermediate"
            android:layout_alignParentEnd="true"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/ifit"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/fitLevelAdvanced"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fitLevelIntermediate"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/afit"
            />

    </RelativeLayout>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/forwardrow"
        android:id="@+id/flForwardRow"
        />
</RelativeLayout>